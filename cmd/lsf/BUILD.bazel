load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "lsf",
    srcs = ["lsf.go"],
    importpath = "github.com/rclone/rclone/cmd/lsf",
    visibility = ["//visibility:public"],
    deps = [
        "//cmd",
        "//cmd/ls/lshelp",
        "//fs",
        "//fs/config/flags",
        "//fs/hash",
        "//fs/operations",
