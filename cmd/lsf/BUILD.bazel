    name = "lsf_test",
    srcs = ["lsf_test.go"],
    embed = [":lsf"],
    deps = [
        "//backend/local",
        "//fs",
        "//fs/list",
        "//fs/operations",
        "//fstest",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
