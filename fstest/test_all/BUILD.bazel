load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "test_all_lib",
    srcs = [
        "clean.go",
        "config.go",
        "report.go",
        "run.go",
        "test_all.go",
    ],
    importpath = "github.com/rclone/rclone/fstest/test_all",
    visibility = ["//visibility:private"],
    deps = [
        "//backend/all",
        "//fs",
        "//fs/config/configfile",
        "//fs/fspath",
        "//fs/list",
        "//fs/operations",
        "//fstest/testserver",
